<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/categoriesLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:text="Categories"
            android:textAlignment="center"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="37dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/backIMG"
                    android:layout_width="116dp"
                    android:layout_height="163dp"
                    android:onClick="categorySelected"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/back"
                    tools:layout_editor_absoluteX="151dp"
                    tools:layout_editor_absoluteY="153dp" />

                <ImageButton
                    android:id="@+id/armsIMG"
                    android:layout_width="116dp"
                    android:layout_height="163dp"
                    android:onClick="categorySelected"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/arms"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="153dp" />

                <ImageButton
                    android:id="@+id/chestIMG"
                    android:layout_width="116dp"
                    android:layout_height="163dp"
                    android:onClick="categorySelected"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/chest"
                    tools:layout_editor_absoluteX="279dp"
                    tools:layout_editor_absoluteY="153dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/backBTN"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:onClick="categorySelected"
                    android:text="Back"
                    tools:layout_editor_absoluteX="151dp"
                    tools:layout_editor_absoluteY="316dp" />

                <Button
                    android:id="@+id/armsBTN"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:onClick="categorySelected"
                    android:text="Arms"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="316dp" />

                <Button
                    android:id="@+id/chestBTN"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:onClick="categorySelected"
                    android:text="Chest"
                    tools:layout_editor_absoluteX="276dp"
                    tools:layout_editor_absoluteY="316dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/legsIMG"
                    android:layout_width="116dp"
                    android:layout_height="163dp"
                    android:onClick="categorySelected"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/legs"
                    tools:layout_editor_absoluteX="151dp"
                    tools:layout_editor_absoluteY="411dp" />

                <ImageButton
                    android:id="@+id/coreIMG"
                    android:layout_width="116dp"
                    android:layout_height="163dp"
                    android:onClick="categorySelected"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/core"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="411dp" />

                <ImageButton
                    android:id="@+id/shouldersIMG"
                    android:layout_width="116dp"
                    android:layout_height="163dp"
                    android:onClick="categorySelected"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/shoulders"
                    tools:layout_editor_absoluteX="279dp"
                    tools:layout_editor_absoluteY="411dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/legsBTN"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:onClick="categorySelected"
                    android:text="Legs"
                    tools:layout_editor_absoluteX="151dp"
                    tools:layout_editor_absoluteY="574dp" />

                <Button
                    android:id="@+id/coreBTN"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:onClick="categorySelected"
                    android:text="Core"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="574dp" />

                <Button
                    android:id="@+id/shouldersBTN"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:onClick="categorySelected"
                    android:text="Shoulders"
                    tools:layout_editor_absoluteX="279dp"
                    tools:layout_editor_absoluteY="574dp" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>